<form id="registerMailForm" action="/register" method="post" role="form"
      name="myForm">
    <h5 class="fw-normal mb-3 pb-3">Sign up</h5>

    <div class="form-outline mb-4">
        <label class="form-label" for="firstName">First name</label>
        <input type="text" id="firstName" name="firstName"
               class="form-control form-control-lg"/>
        <div></div>
    </div>

    <div class="form-outline mb-4">
        <label class="form-label" for="lastName">last name</label>
        <input type="text" id="lastName" name="lastName"
               class="form-control form-control-lg"/>
        <div></div>
    </div>

    <div class="form-outline mb-4">
        <label class="form-label" for="mail">Email</label>
        <input type="email" id="mail" name="mail"
               class="form-control form-control-lg"/>
        <div></div>
    </div>


    <div class="pt-1 mb-4">
        <button class="btn btn-dark btn-lg btn-block" type="submit">Continue</button>
    </div>
    <p class="mb-5 pb-lg-2 text-dark">Already have an account? <a href="login">Login
            here</a></p>

</form>
