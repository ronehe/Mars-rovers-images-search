<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <!-- Bootstrap CSS -->
    <link crossorigin="anonymous" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
          integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" rel="stylesheet">
    <script src="javascript/functionLogin.js"></script>

</head>
<body style="background-color: #eee;">
<section class="vh-100">

    <div class="container-lg py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100 ">
            <div class="col col-xl-10">
                <div class="card">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block ">
                            <img
                                    src="images/rover.png"
                                    alt="login form"
                                    class="img-fluid rounded" alt="Sample image"
                            />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <% if(form === 'login') { %>
                                    <form id="loginForm" action="/loginComplete" method="post" role="form" name="myForm">
                                        <h5 class="fw-normal mb-3 pb-3">Sign into your account</h5>

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="form2Example17">Email address</label>
                                            <input type="email" id="form2Example17" name="mail"
                                                   class="form-control form-control-lg"/>
                                            <div></div>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="form2Example27">Password</label>
                                            <input type="password" id="form2Example27" name="password"
                                                   class="form-control form-control-lg"/>
                                            <div></div>
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                                        </div>
                                        <p class="mb-5 pb-lg-2 text-dark">Don't have an account? <a href="register">Register
                                                here</a></p>

                                    </form>
                                <% } %>
                                <div class="d-none"></div>
                                <div class="d-flex justify-content-center my-2 d-none">
                                    <div class="spinner-grow " role="status" style="width: 5rem; height: 5rem;">
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script crossorigin="anonymous"
        integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>